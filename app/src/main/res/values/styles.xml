<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ReportTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorReport</item>
        <item name="colorPrimaryDark">@color/colorReportDark</item>
        <item name="colorAccent">@color/colorReportAccent</item>
    </style>


    <style name="AppTheme.RedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorReport</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.GreenButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/greenPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TealButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/tealPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
