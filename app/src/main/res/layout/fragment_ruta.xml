<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.exile.piscix.RutaActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/error_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp" />

    <com.softw4re.views.InfiniteListView
    android:id="@+id/content_list_planilla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:scrollbarVisible="true"
    app:dividerVisible="false"
    app:swipeRefreshIndicatorColor="@color/colorAccent" />
</RelativeLayout>
