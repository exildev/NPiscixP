<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.com.exile.piscix.ClienteFragment">
    <com.softw4re.views.InfiniteListView
        android:id="@+id/infiniteListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:dividerVisible="true"
        app:scrollbarVisible="true"
        app:swipeRefreshIndicatorColor="@color/colorAccent" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/qr_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_crop_free"
        android:layout_margin="@dimen/fab_margin"/>
</RelativeLayout>